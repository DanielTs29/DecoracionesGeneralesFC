$tam-serv = 500px

section
	.servicio
		position relative
		text-align center
		.img-item
			width 150px
			height 150px
			box-sizing border-box
			overflow hidden
			border-radius 50% 0 50% 0
			margin 0 auto
			border solid 3px $color
			img
				width 100%
				display block
				//transition all .2s
				&:hover
					transform scale(1.3) rotate(-10deg)
					-webkit-filter brightness(1.3) contrast(1.2) grayscale(0) hue-rotate(0deg) invert(0.1) saturate(1.8) sepia(0)
			

	
				
		h3
			text-transform uppercase																						

#servicios2
	display table
	.info-serv, .info-bg
		display table-cell
		width 50%
	
	.info-serv		
		padding 50px
		text-align justify
		background darken($color, 70%)
		.title
			position relative
			text-transform uppercase
			padding-bottom 10px
			&:after
				content ""
				position absolute
				bottom 0
				display block
				width 200px
				height 2px
				background lighten($color, 10%)
		p
			margin 20px 0 30px
			line-height 2
		ul
			margin 0
			padding 0
			list-style none
			li
				font-size 18px
				margin 10px 0 20px
				padding-left 1em
				&:before
					content "â™£   "
					color lighten($color, 10%)		

	.info-bg
		img
			width 100%
			height inherit