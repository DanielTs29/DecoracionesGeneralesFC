#galeria
	.img-item
		position relative
		box-sizing border-box
		overflow hidden
		border solid 3px $color
		margin-bottom 30px
		z-index 10
		img
			width 100%
			height auto
			display block
			cursor pointer
			transition all .3s
			z-index 1
			&:hover
				transform scale(1.3) rotate(-10deg)
				-webkit-filter brightness(1.3) contrast(1.2) grayscale(0) hue-rotate(0deg) invert(0.1) saturate(1.8) sepia(0)	