html, body
	width 100%
	height 100%

body
	color #fff
	padding-top 50px
	background-color $fondo
	
section#servicios
	padding-top $section
	padding-bottom $section
	
section
	.head-section
		text-align center
		text-transform uppercase
		padding-bottom 10px
		margin-bottom 40px
		&:after
			content ""
			display block
			position absolute
			left calc(50% - 50px)
			width 100px
			height 2px			
			background $color
			
.btn-primary 
	background-color $color
	border-color darken($color, 30%)
	&:hover
		background-color darken($color, 20%)
		border-color darken($color, 40%)

.np
	padding 0