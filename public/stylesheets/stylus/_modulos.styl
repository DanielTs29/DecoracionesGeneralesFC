html, body
	width 100%
	height 100%

body
	color #fff
	padding-top 50px
	background-color $fondo
	
section#servicios
	padding-top $section
	padding-bottom $section
	
section
	.head-section
		text-align center
		text-transform uppercase
		padding-bottom 10px
		margin-bottom 40px
		&:after
			content ""
			display block
			position absolute
			left calc(50% - 50px)
			width 100px
			height 2px			
			background $color
			
.nm
	margin 0
.np
	padding 0