#banner
	position relative
	padding 64px 0 0
	
	background-color $color
	background-image url("../images/fondobanner.png")
	text-transform capitalize

	.__title
		color white
		text-shadow 2px 2px 2px #000
		font-weight 700
		margin 0
	
	.breadcrumb
		background none
		a
			color lighten($color, 80%)
	