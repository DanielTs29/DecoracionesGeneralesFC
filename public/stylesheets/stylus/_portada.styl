#portada
	position relative
	overflow hidden
	height 1px
	min-height 500px
	.bg-video
		position absolute
		top 0%
		left 0%
		height 100%
		width 100% 
		overflow hidden
		&:after
			content ""
			display block
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			background rgba(0,0,0,.6)
		video
			position absolute
			width 100%

	.msn_portada
		display flex
		justify-content center
		align-items center
		height 100%
		padding 50px
		background rgba($colorrgb, .6)
		h1
			margin 0
	
	.img_portada
		position absolute
		right 100px
		bottom -30px
		width 500px
		height 500px
		
.h
	height 100%