#portada
	position relative
	height 100%
	.bg-video
		position absolute
		top 0
		left 0
		z-index -1
		width 100%
		height 100%
		&:after
			content ""
			display block
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			background linear-gradient(rgba(136,14,79,.6), rgba(66,66,66,.6))
		video
			min-width 100%
			min-height 100%
			width 100%
			height 100%
			

