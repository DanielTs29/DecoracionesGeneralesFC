#portada
	position relative
	padding 120px 0
	overflow hidden
	.bg-video
		position absolute
		top 0%
		left 0%
		height 100%
		width 100% 
		overflow hidden
		&:after
			content ""
			display block
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			background rgba(0,0,0,.6)
		video
			position absolute
			width 100%

	.msn_portada,
	.img_portada
		margin-top 10px
		margin-bottom 10px

		

	.msn_portada
		padding 30px 
		background rgba($colorrgb, .7)
	.img_portada
		position absolute
		right 100px
		bottom 0
		width 500px
		height 500px
		z-index 10