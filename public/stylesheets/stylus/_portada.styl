#portada
	display flex
	align-items center
	height 100%
	.bg-video
		position absolute
		top 0%
		left 0%
		height 100%
		width 100% 
		overflow hidden
		&:after
			content ""
			display block
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			background rgba(0,0,0,.6)
		video
			position absolute
			width 100%

	.msn_portada
		padding 30px 
		background rgba($colorrgb, .7)