#portada
	position relative
	height 1px
	min-height 100%
	overflow hidden
	z-index 1
	@media (max-width: 992px)
		background url('http://lorempixel.com/1000/1000') no-repeat
		background-size cover
	
	.__bg-video
		position absolute
		top 0
		left 0
		height 100%
		width 100%
		z-index -1		
		video
			position absolute
			width 100%		
			
	.__titulo
		color #fff
		font-size 4em
		font-family 'Lobster', cursive
		margin 0
		padding 0
		@media (max-width: 768px)
			font-size 3em
		@media (max-width: 450px)
			font-size 2em
			
	.__subtitulo
		color lighten($color, 50%)
		font-weight bold
	
	&:after
		content ""
		display block
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background rgba(0,0,0,.7)
		z-index -1		
