#portada
	position relative
	overflow hidden
	height 1px
	min-height 100%
	z-index 1
	@media (max-width: 992px)
		background url('http://lorempixel.com/1000/1000') no-repeat
		background-size cover
	
	.bg-video
		position absolute
		top 0
		left 0
		height 100%
		width 100%
		z-index -1
		
		video
			position absolute
			width 100%
		
	&:after
		content ""
		display block
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background rgba(0,0,0,.7)
		z-index -1		
			
	.titulo
		margin 0
		padding 0
		font-family 'Lobster', cursive
		font-size 4em
		@media (max-width: 768px)
			font-size 3em
		@media (max-width: 450px)
			font-size 2em
		
		
.h
	height 100%