#portada
	height 100%
	.bg-video
		position absolute
		top 0%
		left 0%
		height 100%
		width 100% 
		overflow hidden
		&:after
			content ""
			display block
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			background linear-gradient(rgba(0,0,0,.7) 70%, rgba($colorrgb,.4))
		video
			position absolute
			width 100%
			